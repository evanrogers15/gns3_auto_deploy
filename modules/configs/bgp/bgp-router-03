frr version 8.4_git
frr defaults traditional
hostname bgp-router-03
no ipv6 forwarding
!
ip route 0.0.0.0/0 192.168.1.1
!
interface eth0
 ip address 11.0.3.2/30
 description bgp-router-01
exit
!
interface eth1
 ip address 12.1.5.1/30
 description bgp-router-05
exit
!
interface eth2
 ip address 12.1.6.1/30
 description bgp-router-06
exit
!
router bgp 12003
 bgp router-id 12.0.0.3
 neighbor 11.0.3.1 remote-as 11001
 neighbor 11.0.3.1 timers 2 6
 neighbor 12.1.5.2 remote-as 13005
 neighbor 12.1.5.2 timers 2 6
 neighbor 12.1.6.2 remote-as 13006
 neighbor 12.1.6.2 timers 2 6
 !
 address-family ipv4 unicast
  redistribute connected
  neighbor 11.0.3.1 route-map ALLOW_PREFIX in
  neighbor 11.0.3.1 route-map ALLOW_PREFIX out
  neighbor 12.1.5.2 route-map ALLOW_PREFIX in
  neighbor 12.1.5.2 route-map ALLOW_PREFIX out
  neighbor 12.1.6.2 route-map ALLOW_PREFIX in
  neighbor 12.1.6.2 route-map ALLOW_PREFIX out
 exit-address-family
exit
!
route-map ALLOW_PREFIX permit 10
exit
!
end