frr version 8.4_git
frr defaults traditional
hostname bgp-router-01
no ipv6 forwarding
!
ip route 0.0.0.0/0 192.168.1.1
!
interface eth0
 ip address 192.168.1.2/24
 description internet_uplink
exit
!
interface eth1
 ip address 11.0.2.1/30
 description bgp-router-02
exit
!
interface eth2
 ip address 11.0.3.1/30
 description bgp-router-03
exit
!
interface eth3
 ip address 11.0.4.1/30
 description bgp-router-04
exit
!
router bgp 11001
 bgp router-id 11.0.0.1
 neighbor 11.0.2.2 remote-as 12002
 neighbor 11.0.2.2 timers 2 6
 neighbor 11.0.3.2 remote-as 12003
 neighbor 11.0.3.2 timers 2 6
 neighbor 11.0.4.2 remote-as 12004
 neighbor 11.0.4.2 timers 2 6
 !
 address-family ipv4 unicast
  redistribute connected
  neighbor 11.0.2.2 route-map ALLOW_PREFIX in
  neighbor 11.0.2.2 route-map ALLOW_PREFIX out
  neighbor 11.0.3.2 route-map ALLOW_PREFIX in
  neighbor 11.0.3.2 route-map ALLOW_PREFIX out
  neighbor 11.0.4.2 route-map ALLOW_PREFIX in
  neighbor 11.0.4.2 route-map ALLOW_PREFIX out
 exit-address-family
exit
!
route-map ALLOW_PREFIX permit 10
exit
!
end