frr defaults datacenter
hostname n-router-01
no ipv6 forwarding
!
ip route 0.0.0.0/0 192.168.1.1
!
interface eth0
 description internet_uplink
 ip address 192.168.1.3/24
exit
!
interface eth1
 ip address 32.43.3.137/30
exit
!
router bgp 7018
 bgp router-id 32.43.3.137
 no bgp log-neighbor-changes
 no bgp default show-hostname
 no bgp default show-nexthop-hostname
 no bgp deterministic-med
 no bgp network import-check
 timers bgp 60 180
 neighbor 32.43.3.138 remote-as 6380
 neighbor 32.43.3.138 ebgp-multihop 2
 neighbor 32.43.3.138 timers 2 6
 neighbor 32.43.3.138 timers connect 120
 !
 address-family ipv4 unicast
  network 0.0.0.0/0
 exit-address-family
exit
!
end