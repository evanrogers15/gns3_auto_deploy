frr version 8.4_git
frr defaults traditional
hostname bgp-router-05
no ipv6 forwarding
!
interface eth0
 ip address 12.0.5.2/30
 description bgp-router-02
exit
!
interface eth1
 ip address 12.1.5.2/30
 description bgp-router-03
exit
!
interface eth2
 ip address 13.0.7.1/30
 description bgp-router-07
exit
!
interface eth3
 ip address 13.0.8.1/30
 description bgp-router-08
exit
!
router bgp 13005
 bgp router-id 13.0.0.5
 neighbor 12.0.5.1 remote-as 12002
 neighbor 12.0.5.1 timers 2 6
 neighbor 12.1.5.1 remote-as 12003
 neighbor 12.1.5.1 timers 2 6
 neighbor 13.0.7.2 remote-as 14007
 neighbor 13.0.7.2 timers 2 6
 neighbor 13.0.8.2 remote-as 14008
 neighbor 13.0.8.2 timers 2 6
 !
 address-family ipv4 unicast
  redistribute connected
  neighbor 12.0.5.1 route-map ALLOW_PREFIX in
  neighbor 12.0.5.1 route-map ALLOW_PREFIX out
  neighbor 12.1.5.1 route-map ALLOW_PREFIX in
  neighbor 12.1.5.1 route-map ALLOW_PREFIX out
  neighbor 13.0.7.2 route-map ALLOW_PREFIX in
  neighbor 13.0.7.2 route-map ALLOW_PREFIX out
  neighbor 13.0.8.2 route-map ALLOW_PREFIX in
  neighbor 13.0.8.2 route-map ALLOW_PREFIX out
 exit-address-family
exit
!
route-map ALLOW_PREFIX permit 10
exit
!
end